
@{
    ViewData["Title"] = "Lost In A Dungeon";
}

<link rel="stylesheet" href="~/webgl/TemplateData/style.css">
<script src="~/webgl/LostInADungeon/Build/UnityLoader.js"></script>
<script src="~/webgl/TemplateData/UnityProgress.js"></script>
<script>
    var unityInstance = UnityLoader.instantiate("unityContainer", "../webgl/LostInADungeon/Build/WebBuild.json", { onProgress: UnityProgress });
</script>

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>
<p>@Html.Raw(@ViewData["Instructions"])</p>

<div class="bubble-container">
    <div class="webgl-content">
        <div id="unityContainer"></div>
        <div class="webgl-footer">
            <div class="webgl-logo"></div>
            <div class="fullscreen" onclick="unityInstance.SetFullscreen(1)"></div>
            <div class="title">Lost In A Dungeon</div>
        </div>
    </div>
</div>

<script></script>